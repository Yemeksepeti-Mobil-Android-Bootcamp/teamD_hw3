<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gonderen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İletişim Bilgileri"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/editTextGonderenAdSoyad"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Gönderen Ad ve Soyad"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gonderen"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextGonderenGsmNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:ems="10"
        android:hint=" Gsm No"
        android:inputType="phone"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGonderenAdSoyad" />

    <EditText
        android:id="@+id/editTextTC"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="T.C."
        android:inputType="number"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGonderenAdSoyad" />

    <EditText
        android:id="@+id/editTextGondericiAdres"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_location_searching_24"
        android:ems="10"
        android:hint=" Mahalle/sokak/il/ilçe giriniz."
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTC" />

    <TextView
        android:id="@+id/alici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alıcı"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextAliciAdSoyad"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Alıcı Ad ve Soyad"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alici" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_mail_24"
        android:ems="10"
        android:hint=" E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAliciAdSoyad" />

    <EditText
        android:id="@+id/editTextAliciGsmNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:ems="10"
        android:hint="Gsm No"
        android:inputType="phone"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAliciAdSoyad" />


    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_input"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextAliciAdres"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_location_searching_24"
        android:ems="10"
        android:hint=" Mahalle/sokak/il/ilçe giriniz."
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEmailAddress"

        />

    <EditText
        android:id="@+id/editTextBinaNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_input"
        android:hint="Bina Numarası"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/editTextDaireNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAliciAdres" />

    <EditText
        android:id="@+id/editTextDaireNo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_input"
        android:hint="Daire Numarası"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextBinaNo"
        app:layout_constraintTop_toBottomOf="@+id/editTextAliciAdres" />
</androidx.constraintlayout.widget.ConstraintLayout>